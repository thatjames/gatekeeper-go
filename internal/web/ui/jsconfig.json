{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "module": "ESNext",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "checkJs": false, // Changed from true to false
    "allowJs": true, // Add this to allow JS files
    "paths": {
      "$components/*": ["src/components/*"],
      "$lib/*": ["src/lib/*"],
      "$scenes/*": ["src/scenes/*"]
    }
  },
  "include": ["src/**/*.js", "src/**/*.svelte"], // Removed .d.ts files
  "exclude": ["node_modules"]
}
