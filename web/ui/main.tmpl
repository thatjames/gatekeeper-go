<html lang="en">

<head>
    <title>GateKeeper</title>
    <link rel="icon" href="assets/favicon.ico">
    <link href="assets/style.css" rel="stylesheet" />
    <link href="assets/css/bootstrap.min.css" rel="stylesheet"/>
    <script src="assets/js/bootstrap.min.js"></script>
    <script>
        if (sessionStorage.getItem("token") === null) {
            window.location = "/";
        }
    </script>
</head>

<body>
    <div id="root" class="container">
        <div id="content" class="container">
            <div id="header">
                <h1>GateKeeper</h1>
                <h2>DHCP Information</h2>
            </div>
            <div id="reserved-content" class="container">
                <h3>Reserved Leases</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Hostname</th>
                            <th scope="col">IP Address</th>
                            <th scope="col">Expires At</th>
                            <th scope="col">Mac Address</th>
                        </tr>
                    </thead>
                    <tbody>
                    {{range .ReservedLeases}}<tr>
                        <td>{{.Hostname}}</td>
                        <td>{{.IP}}</td>
                        <td>{{Format .Expiry}}</td>
                        <td>{{.ClientId}}</td>
                    </tr>{{end}}
                </table>
            </div>
            {{ $length := len .ActiveLeases }}{{if gt $length 0 }}<div id="active-content" class="container">
                <h3>Active Leases</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Hostname</th>
                            <th scope="col">IP Address</th>
                            <th scope="col">Expires At</th>
                            <th scope="col">Mac Address</th>
                        </tr>
                    </thead>
                    <tbody>
                    {{range .ActiveLeases}}<tr>
                        <td>{{.Hostname}}</td>
                        <td>{{.IP}}</td>
                        <td>{{Format .Expiry}}</td>
                        <td>{{.ClientId}}</td>
                    </tr>{{end}}
                </table>
            </div>{{end}}
            <div id="options" class="container">
                <h2>Options</h2>
                <table class="table">
                    <tr>
                        <td>DomainName</td>
                        <td>{{.DomainName}}</td>
                    </tr>
                    <tr>
                        <td>Assignable Range</td>
                        <td>{{.Start}} - {{.End}}</td>
                    </tr>
                    <tr>
                        <td>Nameservers</td> 
                        <td>{{range .Nameservers}}{{.}} {{end}}</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</body>

</html>
